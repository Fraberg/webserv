server {
    listen 	8080
    error	./www/old/error
	name	server1
	host	localhost
	
    location / 		{
        root	./www/old
		index	index.html
		method	GET POST HEAD OPTIONS PUT
		cgi_path ./www/CGI/cgi_tester
    }
    location /test	{
        root    ./www/old/test
		index	index.html
		auto_index	0
		method	GET POST HEAD OPTIONS PUT
    }
    location /auto_index	{
        root    ./www/old/vide
		index	videvidevide
		auto_index	1
		method	GET POST OPTIONS
    }
    location /no_auto_index	{
        root    ./www/old/vide
		index	videvidevide
		auto_index	0
		method	GET POST HEAD OPTIONS PUT
    }
    location /delete {
        root    ./www/old/delete
		index	to_delete
		method	DELETE
	}
}
